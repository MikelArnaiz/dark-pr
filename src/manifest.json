{
  "name": "Dark PR",
  "version": "1.0",
  "description": "Github pull requests in dark mode",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "background",
    "https://github.com/*"
  ],
  "background": {
    "scripts": ["permissions/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "manifest_version": 2
}
